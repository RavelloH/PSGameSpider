<div class="texts overflow full" style="--i: 0">
    <div class="info-header">

        <div class="info-info">
            <div class="info-title">
                <h3><%= game.name %></h3>
                <h4><%= game.fullname %></h4>
            </div>

            <div class="info-sub">
                <span class="virgule">
                    <%= game.publisher %>
                </span>
                <span class="i_small ri:playstation-fill"></span> <span><%= game.platform %></span> •
                <span class="i_small ri:time-fill"></span> <span><%= game.releaseTime %></span>
            </div>

            <div class="info-sub">
                <span class="i_small ri:star-fill"></span> <span><%= game.rate %></span> • <span class="i_small ri:box-3-fill"></span> <span><%= game.category %></span> • <span class="i_small ri:price-tag-3-fill"></span> <span><%= game.type %></span>
            </div>
            <h3>
                <%= game.price %> <%= game.priceCurrency %>
            </h3>
            <div class="form-control">
                <a class="big-button no-effect" href='<%= game.path %>'>
                    <span>前往Store</span>
                </a>
            </div>
        </div>
    </div>
    <div class="info-img">
        <img src="/<%= game.img %>" class="square-img-large">
    </div>


    <br>
    <hr>
    <div class="info-explain">
        <span class="virgule center">- 游戏描述 -</span>
        <p>
            <%- game.info %>
        </p>
        <br>
        <span class="virgule center">
            - 价格历史 -
        </span>
        <p>
        <div class='full center'>
            <img src="<%= '/zh-hans-hk/'+game.name+'/priceHistory.svg' %>">
        </div><br>
            <table>
                <thead>
                    <tr>
                        <th>时间</th>
                        <th>价格</th>
                    </tr>
                </thead>
                <tbody>

                    <% for (let i = 0; i < game.priceHistory.length; i++) {
                        %>
                        <tr>
                            <td><%= game.priceHistory[i][0] %></td>
                            <td><%= game.priceHistory[i][1] + game.priceCurrency%></td>
                        </tr>
                        <%

                    } %>

                </tbody>
            </table>
        </p>
        <span class="virgule center">
            - 评分历史 -
        </span>
        <p>
        <div class='full center'>
            <img src="<%= '/zh-hans-hk/'+game.name+'/rateHistory.svg' %>">
        </div><br>
            <table>
                <thead>
                    <tr>
                        <th>时间</th>
                        <th>评分</th>
                    </tr>
                </thead>
                <tbody>

                    <% for (let i = 0; i < game.rateHistory.length; i++) {
                        %>
                        <tr>
                            <td><%= game.rateHistory[i][0] %></td>
                            <td><%= game.rateHistory[i][1] %></td>
                        </tr>
                        <%
                    } %>
                </tbody>
            </table>
        </p>
        <div id="tcomment">
            <div class="info center">
                <span class="i_small ri:download-cloud-line"></span> 正在加载评论...
            </div>
        </div>

    </div>
</div>